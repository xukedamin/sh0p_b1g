{% capture collection_title %}{{ collection.title }}{% endcapture %}
<header class="title-list-collection">
	<a class="pull-right" href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}">{{ 'homepage.featured_collection_rows.more_in_collection' | t: collection_title: collection_title }} &rsaquo;</a>
  <h2 >{{ collection_title }} </h2> 
</header>


{% assign grid_item_width = 'large--one-fifth medium--one-half' %}

<div class="row">
  {% if collection.products %}
    {% comment %}
      Default collection order
    {% endcomment %}
    {% for product in collection.products limit:6 %}
      {% include 'product-grid-item' %}
    {% endfor %}

  {% else %}
    {% comment %}
      Custom order collections by 'all-collections' linklist
    {% endcomment %}
    {% for product in collections[collection.handle].products limit:6 %}
      {% include 'product-grid-item' %}
    {% endfor %}

  {% endif %}
</div>

