{% for i in (1..10) %}
{% capture testimonials_title %}testimonials{{ i }}_title{% endcapture %}
{% capture testimonials_text %}testimonials{{ i }}_text{% endcapture %}
{% if settings[testimonials_text] != blank %}
            <div class="testimonial-item">
              <div class="item-content">
                <p class="comment">&quot; {{ settings[testimonials_text] }} &quot;</p>
                <p class="name text-right">{{ settings[testimonials_title] }}</p>
              </div>
            </div>
{% endif %}   
{% endfor %}  